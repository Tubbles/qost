#!/usr/bin/env bash
# -*- coding: utf-8 -*-

my_dir="$(dirname "$(realpath "$0")")"

step() {
    if [[ ${verbose} == true ]]; then
        (
            export verbose
            set -x
            "$@"
        )
    else
        "$@"
    fi
}

docker_step() {
    step "${my_dir}/docker.sh" "$@"
}
