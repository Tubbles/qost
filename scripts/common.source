#!/usr/bin/env bash
# -*- coding: utf-8 -*-

# shellcheck disable=2034
root_dir="$(git rev-parse --show-toplevel)"
# shellcheck disable=2034
script_dir="${root_dir}/scripts"

step() {
    if [[ ${verbose} == true ]]; then
        (
            export verbose
            set -x
            "$@"
        )
    else
        "$@"
    fi
}

docker_step() {
    step "${script_dir}/docker.sh" "$@"
}
